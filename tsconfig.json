{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types/"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist/esm/types",
    "module": "ESNext",
  },
  "exclude": ["dist"],
  "include": ["./src/**/*", ".storybook/**/*"],
}
